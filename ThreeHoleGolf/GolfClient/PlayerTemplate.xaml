<UserControl x:Class="GolfClient.PlayerTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"  >
    <Border x:Name="PlayerBorder" BorderBrush="Black" BorderThickness="5" >
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="37*" />
                <RowDefinition Height="152*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*" />
                <ColumnDefinition Width="33*" />
                <ColumnDefinition Width="33*" />
            </Grid.ColumnDefinitions>

            <Border BorderBrush="Black" BorderThickness="2" Grid.ColumnSpan="3" Grid.Row="0" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label x:Name="PlayerName" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" FontWeight="ExtraBold"  HorizontalAlignment="Left" Content="Player: " Margin="0,0,0,10" Grid.RowSpan="2"  />
                    <Label x:Name="PlayerScore" Grid.Column="2" VerticalAlignment="Center" FontWeight="ExtraBold" HorizontalAlignment="Left" Content="Score: " Margin="0,0,0,10" Grid.RowSpan="2"  />
                </Grid>
            </Border>

            <Border BorderBrush="Black" Grid.ColumnSpan="3" BorderThickness="2" Grid.Row="1">
                <Grid Grid.Row="1"  RenderTransformOrigin="0.5,0.5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="33*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btn_card1" Margin="15">
                        <Button.Template>
                            <ControlTemplate>
                                <Image x:Name="img_card1" Source="Images/BackCard.jpg"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <Button x:Name="btn_card2" Grid.Column="1" Margin="15">
                        <Button.Template>
                            <ControlTemplate>
                                <Image x:Name="img_card2" Source="Images/BackCard.jpg" Grid.Column="1"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btn_card3"  Grid.Column="2" Margin="15">
                        <Button.Template>
                            <ControlTemplate>
                                <Image x:Name="img_card3" Source="Images/BackCard.jpg" Grid.Column="2"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>


        </Grid>
    </Border>
</UserControl>
